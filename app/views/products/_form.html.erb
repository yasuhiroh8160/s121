<%= form_with(model: product, local: true) do |form| %>
  <% if product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :price %>
    <%= form.number_field :price %>
  </div>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_field :description %>
  </div>

  <div class="field">
    <%= form.label :ブランド名 %>
    <%= form.text_field :brand %>
  </div>

  <div class="field">
    <%= form.label :サイズ %>
    <%= form.collection_select :size_id, Size.all, :id , :name %>
  </div>

  <div class="field">
    <%= form.label :発送地域 %>
    <%= form.collection_select :fromprefecture_id, Fromprefecture.all, :id, :name, prompt: "--" %>
  </div>

  <div class="field">
    <%= form.label :発送方法 %>
    <%= form.collection_select :shipping_id, Shipping.all, :id, :method, prompt: "--" %>
  </div>

  <div class="field">
    <%= form.label :画像 %>
    <%= form.file_field :images, multiple: true %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
